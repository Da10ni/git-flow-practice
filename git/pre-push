#!/bin/sh

echo "Remote: $1"
echo "URL: $2"

# Get current branch
current_branch=$(git rev-parse --abbrev-ref HEAD)
echo "Current branch: $current_branch"

# Block direct pushes to protected branches
case "$current_branch" in
    main|master|development|develop)
        echo "" >&2
        echo "âŒ =================================" >&2
        echo "âŒ DIRECT PUSH BLOCKED!" >&2
        echo "âŒ Branch: $current_branch" >&2
        echo "âŒ Use Pull Request workflow!" >&2
        echo "âŒ =================================" >&2
        echo "" >&2
        echo "âœ… Correct workflow:" >&2
        echo "   1. git checkout -b feature/your-feature" >&2
        echo "   2. git push origin feature/your-feature" >&2
        echo "   3. Create Pull Request on GitHub" >&2
        echo "" >&2
        exit 1
        ;;
esac

# Function to check if branch was created from specific parent
check_parent_branch() {
    local branch=$1
    local expected_parent=$2
    
    # Check if branch already exists on remote (skip parent check)
    if git ls-remote --heads origin "$branch" 2>/dev/null | grep -q .; then
        echo "âœ… Branch already exists on remote"
        return 0
    fi
    
    # For new branches, check parent
    echo "ðŸ” Checking parent branch for new branch..."
    
    # Get the commit where this branch diverged from expected parent
   local parent_commit=$(git rev-parse "origin/$expected_parent" 2>/dev/null || git rev-parse "$expected_parent" 2>/dev/null || echo "")
    if [ -z "$parent_commit" ]; then
        echo "âŒ Parent branch '$expected_parent' not found locally!"
        return 1
    fi
    
    # Get merge base with expected parent
    local merge_base=$(git merge-base HEAD "$expected_parent" 2>/dev/null || echo "")
    
    # Check if branch was created from expected parent
    if [ "$merge_base" = "$parent_commit" ]; then
        echo "âœ… Branch was created from $expected_parent"
        return 0
    else
        # Additional check: maybe parent was updated after branch creation
        # Check if all commits from parent are in current branch
        local missing_commits=$(git rev-list "$merge_base..$expected_parent" 2>/dev/null | wc -l)
        if [ "$missing_commits" -eq 0 ]; then
            echo "âœ… Branch contains all commits from $expected_parent"
            return 0
        else
            echo "âŒ Branch was NOT created from $expected_parent"
            echo "âŒ Missing $missing_commits commits from $expected_parent"
            return 1
        fi
    fi
}

# Validate branch patterns and parent branches
case "$current_branch" in
    hotfix*)
        echo "ðŸ¥ Validating hotfix branch: $current_branch"
        
        if ! check_parent_branch "$current_branch" "main"; then
            echo "" >&2
            echo "âŒ =================================" >&2
            echo "âŒ HOTFIX MUST BE FROM MAIN!" >&2
            echo "âŒ Your branch: $current_branch" >&2
            echo "âŒ =================================" >&2
            echo "" >&2
            echo "âœ… Correct workflow:" >&2
            echo "   1. git checkout main" >&2
            echo "   2. git pull origin main" >&2
            echo "   3. git checkout -b $current_branch" >&2
            echo "" >&2
            exit 1
        fi
        ;;
        
    feature*)
        echo "âœ¨ Validating feature branch: $current_branch"
        
        if ! check_parent_branch "$current_branch" "development"; then
            echo "" >&2
            echo "âŒ =================================" >&2
            echo "âŒ FEATURE MUST BE FROM DEVELOPMENT!" >&2
            echo "âŒ Your branch: $current_branch" >&2
            echo "âŒ =================================" >&2
            echo "" >&2
            echo "âœ… Correct workflow:" >&2
            echo "   1. git checkout development" >&2
            echo "   2. git pull origin development" >&2
            echo "   3. git checkout -b $current_branch" >&2
            echo "" >&2
            exit 1
        fi
        ;;
        
    release*)
        echo "ðŸš€ Validating release branch: $current_branch"
        
        if ! check_parent_branch "$current_branch" "development"; then
            echo "" >&2
            echo "âŒ =================================" >&2
            echo "âŒ RELEASE MUST BE FROM DEVELOPMENT!" >&2
            echo "âŒ Your branch: $current_branch" >&2
            echo "âŒ =================================" >&2
            echo "" >&2
            echo "âœ… Correct workflow:" >&2
            echo "   1. git checkout development" >&2
            echo "   2. git pull origin development" >&2
            echo "   3. git checkout -b $current_branch" >&2
            echo "" >&2
            exit 1
        fi
        ;;
        
    bugfix/*)
        echo "ðŸ› Bugfix branch pattern valid: $current_branch"
        echo "â„¹ï¸  Bugfix branches can be created from any parent"
        ;;
        
    *)
        echo "" >&2
        echo "âŒ =================================" >&2
        echo "âŒ Invalid branch pattern!" >&2
        echo "âŒ Your branch: $current_branch" >&2
        echo "âŒ =================================" >&2
        echo "" >&2
        echo "âœ… Allowed patterns:" >&2
        echo "   FROM main:" >&2
        echo "   - hotfix*   (urgent fixes)" >&2
        echo "" >&2
        echo "   FROM development:" >&2
        echo "   - feature*  (new features)" >&2
        echo "   - release*  (release prep)" >&2
        echo "" >&2
        echo "   FROM any branch:" >&2
        echo "   - bugfix/*  (general fixes)" >&2
        echo "" >&2
        echo "Example: git branch -m feature-add-login" >&2
        echo "" >&2
        exit 1
        ;;
esac

echo "âœ… All checks passed! Push allowed!"
exit 0